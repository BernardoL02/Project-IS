<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

	<xs:element name="Application">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Name" type="xs:string" minOccurs="1" maxOccurs="1"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="Container">
		<xs:complexType>
			<xs:all>
				<xs:element name="Name" type="xs:string" minOccurs="0" maxOccurs="1"/>
				<xs:element name="Parent" type="xs:int" minOccurs="0" maxOccurs="1"/>
			</xs:all>
		</xs:complexType>
	</xs:element>

	<xs:element name="Record">
		<xs:complexType>
			<xs:all>
				<xs:element name="Name" type="xs:string" minOccurs="1" maxOccurs="1"/>
				<xs:element name="Content" type="xs:string" minOccurs="1" maxOccurs="1"/>
			</xs:all>
		</xs:complexType>
	</xs:element>

	<xs:element name="Notification">
		<xs:complexType>
			<xs:all>
				<xs:element name="Name" type="xs:string" minOccurs="1" maxOccurs="1"/>
				<xs:element name="Content" type="xs:string" minOccurs="1" maxOccurs="1"/>
				<xs:element name="Event" type="xs:int" minOccurs="1" maxOccurs="1"/>
				<xs:element name="Endpoint" type="xs:string" minOccurs="1" maxOccurs="1"/>
				<xs:element name="Enabled" type="xs:boolean" minOccurs="1" maxOccurs="1"/>
			</xs:all>
		</xs:complexType>
	</xs:element>

	<xs:element name="Root">
		<xs:complexType>
			<xs:sequence>
				<xs:choice maxOccurs="1" minOccurs="1">
					<xs:element ref="Application"/>
					<xs:element ref="Container"/>
					<xs:element ref="Record"/>
					<xs:element ref="Notification"/>
				</xs:choice>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
